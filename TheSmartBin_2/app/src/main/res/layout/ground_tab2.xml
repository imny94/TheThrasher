<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:src="@drawable/bin_pic1"/>
    
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:paddingTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Bin_Status"
           android:textColor="@color/verdigirs"
           android:id="@+id/Bin_Status"
           android:textStyle="bold"
           android:textSize="20sp"
           android:paddingStart="@dimen/activity_horizontal_margin"/>
       <EditText
           android:layout_marginTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="FULL"
           android:layout_marginLeft="@dimen/activity_horizontal_margin"
           android:layout_alignParentTop="true"
           android:layout_toEndOf="@+id/Bin_Status"
           android:background="@color/nicegreen"
           android:textColor="@color/white"
           android:textSize="20sp"/>

   </RelativeLayout>

    <TextView
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/staffReport"
        android:textColor="@color/verdigirs"
        android:id="@+id/Staff_Report"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingStart="@dimen/activity_horizontal_margin"
        />
    <Spinner
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:id="@+id/spinner"></Spinner>
</LinearLayout>