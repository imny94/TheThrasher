<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lejit.thesmartbin_2.About">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:text="@string/AboutSmartBin"
            android:textAlignment="center"
            android:textSize="30sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SmartBinInfo"
            android:textColor="@color/nicegreen"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:textSize="15sp"/>
        <com.sa90.materialarcmenu.ArcMenu
            android:id="@+id/arcmenu_android_example_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu_color="@color/nicegreen"
            app:menu_open="arc_right"
            android:layout_gravity="bottom"
            android:layout_marginRight="300dp"
            app:menu_scr="@drawable/leaf_min">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_arc_menu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logout"
                app:backgroundTint="@color/nicegreen" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_arc_menu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/analytics"
                app:backgroundTint="@color/nicegreen" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_arc_menu_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_profile"
                app:backgroundTint="@color/nicegreen" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_arc_menu_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/info"
                app:backgroundTint="@color/nicegreen" />

        </com.sa90.materialarcmenu.ArcMenu>
    </LinearLayout>



</ScrollView>
