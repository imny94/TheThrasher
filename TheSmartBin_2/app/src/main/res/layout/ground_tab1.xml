<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/groundText"
            android:textColor="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="italic"
            android:paddingBottom="20dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/activity_horizontal_margin"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BinInfo1"
                android:background="@color/verdigirs"
                android:textColor="@color/white" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BinInfo2"
                android:background="@color/verdigirs"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BinInfo3"
                android:background="@color/verdigirs"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BinInfo4"
                android:background="@color/verdigirs"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BinInfo5"
                android:background="@color/verdigirs"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BinInfo6"
                android:background="@color/verdigirs"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>